# Archivo .env.example - Plantilla de variables de entorno

# Nombre de la aplicación
APPLICATION_NAME=Centro de Control de Acceso

# Versión de la aplicación
APPLICATION_VERSION=1.0.0

# Puerto en el que se ejecuta la aplicación
APPLICATION_PORT=8080

# Entorno de la aplicación (dev, test, prod, docker)
APPLICATION_ENV=docker

# Configuración de CORS
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:4201
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Configuración de la base de datos
DATABASE_NAME=cca
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_URL=jdbc:postgresql://${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Configuración específica para Docker Compose
POSTGRES_DB=${DATABASE_NAME}
POSTGRES_USER=${DATABASE_USERNAME}
POSTGRES_PASSWORD=${DATABASE_PASSWORD}

# Configuración de puertos para Docker
API_EXTERNAL_PORT=8080
DB_EXTERNAL_PORT=5432

# Configuración de JPA
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Configuración del token JWT
TOKEN_SECRET=your_very_long_secret_key_here_minimum_512_bits
TOKEN_EXPIRATION_TIME=86400000
TOKEN_ALGORITHM=HmacSHA512
TOKEN_ITERATIONS=100000
TOKEN_KEY_LENGTH=512
TOKEN_SALT=your_base64_encoded_salt_here

# Configuración de niveles de logging
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_HTTP=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB_SERVLET_MVC_METHOD_ANNOTATION_REQUESTMAPPINGHANDLERADAPTER=INFO

# Llave identificadora de la aplicación
APPLICATION_KEY=CCA_AUTH_SERVICE

# Configuración de Flyway
FLYWAY_ENABLED=true
